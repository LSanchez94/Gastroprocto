<!-- Modal 3D -->
<div class="modal fade" id="abdominalm" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">LAPAROSCOPIA ABDOMINAL</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
